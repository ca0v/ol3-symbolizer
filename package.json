{
  "name": "ol3-symbolizer",
  "version": "5.1.3",
  "description": "Deserialize ol3 styles",
  "main": "built/index.js",
  "scripts": {
    "clean": "rmdir .\\built /s/q",
    "update": "npm install ol3-fun reverse-proxy-cache",
    "doc": "typedoc --out ./built/docs --tsconfig ./tsconfig.json --readme none",
    "build-for-amd": "tsc -p tsconfig.json",
    "build-for-loaders": "tsc -p loaders/tsconfig.json",
    "build-for-tests": "tsc -p tests/tsconfig.json --outFile ./built/tests.max.js",
    "watch-for-tests": "npm run build-for-tests -- -w",
    "build-for-examples": "tsc -p examples/tsconfig.json --outFile ./built/examples.max.js",
    "live-for-tests": "live-server --port=5001 --wait=200 --watch=./built/*.max.js --open=\"./loaders/tests.html?theme=dark&debug=1&test=*\" --browser=CHROME",
    "live-for-examples": "live-server --port=5001 --wait=200 --watch=./built/*.max.js --open=\"./loaders/tests.html?theme=dark\" --browser=CHROME",
    "dev-for-tests": "npm-run-all -p gateway live-for-tests watch-for-tests",
    "dev-for-examples": "npm run build-for-examples & start npm run live-for-examples & npm run build-for-examples -- -w",
    "uglify-for-amd": "cd built && uglifyjs index.max.js --source-map \"content='index.max.js.map',url='index.js.map'\" --output=index.js --compress --mangle",
    "tests": "npm run dev-for-tests",
    "move": "mv built/index.max.d.ts built/index.d.ts",
    "before-push": "npm-run-all clean build-for-loaders build-for-amd build-for-tests build-for-examples move test",
    "install": "npm run build-for-amd",
    "gateway": "reverse-proxy-cache",
    "test": "npm run dev-for-tests"
  },
  "pre-commit": [
    "before-push"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ca0v/ol3-symbolizer.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ca0v/ol3-symbolizer/issues"
  },
  "homepage": "https://github.com/ca0v/ol3-symbolizer#readme",
  "dependencies": {
    "ol3-fun": "https://github.com/ca0v/ol3-fun/tarball/v5.1.3",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/jquery": "^3.3.9",
    "@types/mocha": "^5.2.5",
    "@types/ol": "^4.6.2",
    "@types/requirejs": "^2.1.31",
    "jquery": "^3.3.1",
    "live-server": "^1.2.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "reverse-proxy-cache": "https://github.com/ca0v/reverse-proxy-cache/tarball/v1.0.0",
    "uglify-js": "^3.4.8"
  },
  "reverse-proxy-cache": {
    "port": "3001",
    "reverse-proxy-db": "unittest.sqlite",
    "proxy-pass": [
      {
        "about": "requests to /mock redirect to https://usalvwdgis1.infor.com:6443",
        "baseUri": "/mock/ags",
        "proxyUri": "https://usalvwdgis1.infor.com:6443/arcgis"
      },
      {
        "baseUri": "/mock/geoserver",
        "proxyUri": "http://localhost:8080/geoserver"
      }
    ]
  }
}