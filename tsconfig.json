{
    "compilerOptions": {
        "removeComments": true,
        "declaration": true,
        "module": "amd",
        "target": "es3",
        "noImplicitAny": true,
        "sourceMap": true,
        "outFile": "./built/index.js",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "bower/*": [
                "./bower_components/*"
            ]
        }
    },
    "exclude": [
        "bower_components",
        "built"
    ]
}